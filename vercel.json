{
    "version": 2,
    "buildCommand": "npm run build",
    "installCommand": "pnpm install",
    "outputDirectory": "build",
    "headers": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
    ],
    "functions": [
        {
            "src": "./build/main.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "src": "/(.*)",
            "dest": "/build/main.js"
        }
    ]
}